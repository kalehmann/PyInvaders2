try:
	import pyinvaders2
except ImportError:
	# Module is not installed.
	import inspect
	import os
	from pathlib import Path
	directory = Path(
		os.path.dirname(
			os.path.abspath(inspect.getfile(inspect.currentframe()))
		)
	)
	import sys
	sys.path.insert(0, str(directory.parent))
	import pyinvaders2


if __name__ == "__main__":
	pyinvaders2.levelcreator()
